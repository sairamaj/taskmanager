<UserControl x:Class="JsonExecutorTasks.Views.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JsonExecutorTasks.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="20"/>
            <RowDefinition Height="3"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding Data}" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button Grid.Row="1" Grid.Column="0" Content="Run" Width="20" />
        <GridSplitter Grid.Row="2" Grid.Column="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <TextBox Grid.Row="3" Grid.Column="0" Text="{Binding Data}" TextWrapping="Wrap" AcceptsReturn="True"/>
    </Grid>
</UserControl>
